{% comment %}<!--
The projects_list include is a listing helper.
Usage:
  1) assign the 'projects_list' variable to a valid array of pages or posts.
  2) include JB/projects_list
  example:
    <dl>
  	  {% assign projects = site.pages %}  
  	  {% include JB/projects_list %}
  	</dl>
  	
  Grouping: (optional): 
  	assign the 'group' variable to constrain the list to only pages/posts
  	in the given group. Note you must define the group manually in the page/post
  	meta-data to use this feature.
  	Grouping is mainly helpful for non-post pages.
  	If you want to group posts, it's easier/better to tag them, then pass the tagged posts array.
  	i.e. site.tags.cool_tag (this returns an array of posts tagged: cool_tag)
  	
  This helper can be seen in use at: ../_layouts/default.html
-->{% endcomment %}

{% if site.JB.projects_list.provider == "custom" %}
  {% include custom/projects_list %}
{% else %}
  {% for node in projects_list %}
    {% if node.title != null %}
      {% if group == null or group == node.group %}
      	{% unless page.url == node.url %}
          <dt><h3><a href="{{ BASE_PATH }}{{ node.url }}">{{ node.title }}</a></h3></dt>
            {% if node.description %}
              <dd>{{ node.description }}</dd>
            {% endif %}
      	{% endunless %}
      {% endif %}
    {% endif %}
  {% endfor %}
{% endif %}
{% assign pages_list = nil %}
{% assign group = nil %}